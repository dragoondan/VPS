#!/bin/bash
if [ $(id -u) -eq 0 ]
then
	echo -e "\033[1;32mNombre del nuevo usuario:\033[0;37m"; read -p " " name
	echo -e "\033[1;32mContrasena para el usuario $name:\033[0;37m"; read -p " " pass
	echo -e "\033[1;32mCuantos dias de servicio compro el usuario $name ?:\033[0;37m"; read -p " " daysrnf
	echo -e "\033[1;32mLimite de logins simultaneos:\033[0;37m"; read -p " " limiteuser
	echo -e "\033[0m"
	if cat /etc/passwd |grep $name: |grep -vi [a-z]$name |grep -v [0-9]$name > /dev/null
	then
		echo -e "\033[1;31mEl usuario $name ya existe\033[0m"
	else
		valid=$(date '+%C%y-%m-%d' -d " +$daysrnf days")
		datexp=$(date "+%d/%m/%Y" -d "+ $daysrnf days")
		useradd -M -s /bin/false $name -e $valid
		( echo "$pass";echo "$pass" ) | passwd $name 2> /dev/null
		limite $name $limiteuser
		echo -e "\033[1;36mUsuario: \033[0m$name"
		echo -e "\033[1;36mContrasena: \033[0m$pass"
		echo -e "\033[1;36mFecha expiracion:\033[0m $datexp"
	    echo "$pass" > /etc/VpsPackdir/senha/$name
	fi
else
	if echo $(id) |grep sudo > /dev/null
	then
	echo "Su usuario esta en el grupo sudo"
	echo -e "Para ser root ejecute \033[1;31msudo su\033[0m"
	echo -e "O ejecute crearusuario como sudo. \033[1;31msudo crearusuario\033[0m"
	else
	echo -e "No es usuario root, ni tiene sus derechos (sudo)\nPara volverse root ejecute \033[1;31msu\033[0m y escriba su contrase√±a de root"
	fi
fi
